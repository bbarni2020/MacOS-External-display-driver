[Unit]
Description=DeskExtend Receiver
After=display-manager.service
Wants=display-manager.service

[Service]
User=pi
WorkingDirectory=/home/pi/Desktop/receiver
EnvironmentFile=/home/pi/Desktop/receiver/.env
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/pi/.Xauthority
ExecStart=/usr/bin/xterm -hold -e /home/pi/Desktop/receiver/start.sh
Restart=always
RestartSec=3

[Install]
WantedBy=display-manager.service